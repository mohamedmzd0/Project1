<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamedabdelaziz.project1.SecondFragment.AddNewProject">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:text="اضافة مشروع جديد"
            android:textColor="#000"
            android:textSize="@dimen/textsize_l"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم المشروع"
                android:maxLines="1"
                android:textSize="@dimen/textsize_m"
                android:inputType="text"
                android:imeActionLabel="next"
                android:paddingEnd="10dp"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/project_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="المسئول عن المشروع"
                android:paddingEnd="10dp"
                android:imeActionLabel="next"
                android:maxLines="1"
                android:textSize="@dimen/textsize_m"
                android:inputType="text"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/respone_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" رقم تيلفون المسئول"
                android:paddingEnd="10dp"
                android:imeActionLabel="next"
                android:maxLines="1"
                android:textSize="@dimen/textsize_m"
                android:inputType="number"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/respone2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" المكلف بالمشروع"
                android:paddingEnd="10dp"
                android:imeActionLabel="next"
                android:maxLines="1"
                android:textSize="@dimen/textsize_m"
                android:inputType="text"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/respone2_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" رقم المكلف بالمشروع"
                android:paddingEnd="10dp"
                android:imeActionLabel="next"
                android:maxLines="1"
                android:textSize="@dimen/textsize_m"
                android:inputType="number"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" ملاحظات"
                android:inputType="text"
                android:textSize="@dimen/textsize_m"
                android:imeActionLabel="done"
                android:paddingEnd="10dp"
                android:paddingStart="10dp" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="@dimen/login_btn_w"
            android:layout_height="@dimen/logo_btn_h"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_view" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#0FFF">

                <Button
                    android:id="@+id/add_BTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0fFF"
                    android:text="ادخال جديد"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textsize_l"
                    android:textStyle="bold" />
            </com.balysv.materialripple.MaterialRippleLayout>


        </FrameLayout>

    </LinearLayout>

</ScrollView>
