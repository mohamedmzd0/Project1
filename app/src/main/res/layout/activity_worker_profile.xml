<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamedabdelaziz.project1.WorkerProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imge_profile"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/manuser"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:textSize="@dimen/textsize_l"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:textSize="@dimen/textsize_m" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:textSize="@dimen/textsize_m" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:textSize="@dimen/textsize_m" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#555" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#1555"
                    android:text="مستحق"
                    android:textAlignment="center"
                    android:textColor="#008" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#555" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#1555"
                    android:text="مدفوع"
                    android:textAlignment="center"
                    android:textColor="#008" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#555" />

                <TextView
                    android:layout_width="0dp"

                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#1555"
                    android:text="سلف"
                    android:textAlignment="center"
                    android:textColor="#008" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#555" />

                <TextView
                    android:layout_width="0dp"

                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#1555"
                    android:text="اجمالى الاجره"
                    android:textAlignment="center"
                    android:textColor="#008" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#555" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#1555"
                    android:text="اسم المشروع"
                    android:textAlignment="center"
                    android:textColor="#008" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_edit"
        app:fabSize="normal" />
</FrameLayout>
